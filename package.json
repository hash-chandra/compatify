{
  "name": "compatify",
  "version": "2.0.4",
  "description": "Node.js dependency compatibility checker - detect version conflicts, peer dependency issues, and deprecated packages",
  "main": "src/index.js",
  "bin": {
    "compatify": "bin/compatify.js"
  },
  "files": [
    "bin/",
    "src/",
    "data/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ test/ bin/",
    "lint:fix": "eslint src/ test/ bin/ --fix",
    "start": "node bin/compatify.js",
    "check": "node bin/compatify.js check",
    "prepublishOnly": "npm test && npm run lint",
    "validate": "npm run lint && npm test"
  },
  "keywords": [
    "compatibility",
    "dependencies",
    "npm",
    "nodejs",
    "package-manager",
    "version-conflict",
    "peer-dependencies",
    "compatibility-checker",
    "dependency-analyzer",
    "node-version",
    "package-compatibility",
    "dependency-check"
  ],
  "author": "hash-chandra",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hash-chandra/compatify.git"
  },
  "bugs": {
    "url": "https://github.com/hash-chandra/compatify/issues"
  },
  "homepage": "https://github.com/hash-chandra/compatify#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "cosmiconfig": "^9.0.0",
    "ora": "^5.4.1",
    "pacote": "^21.1.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0"
  }
}
